{
  "enabled": true,
  "name": "Auto Format on Agent Stop",
  "description": "Automatically runs Prettier to format all code files whenever the agent completes a task",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "runCommand",
    "command": "npm run format"
  }
}