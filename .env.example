# EAMCET Mock Test Platform - Environment Variables Example
# Copy this file to .env.local for local development
# NEVER commit actual .env files to version control

# ============================================
# Cloudflare Configuration
# ============================================
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_API_TOKEN=your-api-token-here
CLOUDFLARE_EMAIL=your-email@example.com

# ============================================
# Database Configuration
# ============================================
# Local development database
DATABASE_ID_LOCAL=your-local-db-id

# Development environment database
DATABASE_ID_DEV=your-dev-db-id

# Production environment database
DATABASE_ID_PROD=your-prod-db-id

# ============================================
# Authentication Configuration
# ============================================
# JWT Secret for token signing (use strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Bcrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=12

# Session timeout in seconds (86400 = 24 hours)
SESSION_TIMEOUT=86400

# ============================================
# External API Configuration
# ============================================
# AI Service API Key (for question generation)
AI_API_KEY=your-ai-api-key-here
AI_API_URL=https://api.example.com/v1

# ============================================
# Frontend Configuration
# ============================================
# API Base URLs
VITE_API_BASE_URL=http://localhost:8787
VITE_TEST_ENGINE_URL=http://localhost:8788
VITE_AI_WORKER_URL=http://localhost:8789
VITE_ANALYTICS_URL=http://localhost:8790

# Environment
VITE_ENVIRONMENT=development

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Worker Configuration
# ============================================
# Test Engine
TEST_DURATION_LIMIT=10800
MAX_QUESTIONS_PER_TEST=160
WEBSOCKET_TIMEOUT=300

# AI Worker
QUESTION_GENERATION_TIMEOUT=30
MAX_QUESTIONS_PER_BATCH=50

# Analytics Worker
ANALYTICS_CALCULATION_TIMEOUT=10
CACHE_TTL=3600

# ============================================
# Monitoring and Logging
# ============================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable detailed logging
ENABLE_DEBUG_LOGS=false

# ============================================
# Security Configuration
# ============================================
# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Content Security Policy
CSP_ENABLED=true

# ============================================
# Performance Configuration
# ============================================
# Cache configuration
ENABLE_CACHING=true
CACHE_MAX_AGE=3600

# ============================================
# Feature Flags
# ============================================
ENABLE_AI_GENERATION=true
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKETS=true

# ============================================
# Development Tools
# ============================================
# Enable source maps in production (not recommended)
ENABLE_SOURCE_MAPS=false

# Enable performance profiling
ENABLE_PROFILING=false
